[alias]
    amend = commit --amend --no-edit
    co    = checkout
    hist  = log --branches --remotes --tags --graph --oneline --decorate
    s     = !git status -sb && git --no-pager diff --shortstat

[commit]
    verbose = true

[core]
    editor = nvim
    pager  = delta

[delta]
    navigate     = true
    side-by-side = true

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[pull]
    rebase = true

