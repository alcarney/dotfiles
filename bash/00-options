# -- options
#
# autocd:       If the command matches a directory name, cd into it
# globstar:     Enable recursive ** globbing
shopt -s autocd
shopt -s globstar

# -- CDPATH
#
# To quote the manpage:
#
# > The search path for the cd command. This is a colon separated list of
# > directories in which the shell looks for destination directories specified
# > by the cd command.
#
# So by setting this I can cd to a project's directory from *anywhere*!
[ -d "$HOME/Projects" ] && export CDPATH=".:~/Projects"

# -- history
#
# histappend:   On exist append history to HISTFILE, don't overwrite
# HISTCONTROL:
# - erasedups:  Delete any previous instances of a command before adding it to
#               the history
shopt -s histappend
export HISTCONTROL="erasedups"

# -- path
#
# If the following paths actually exist on this machine, add them to PATH
paths=(
    "$HOME/bin"
    "$HOME/go/bin"
    "$HOME/.cargo/bin"
    "$HOME/.emacs.d/bin"
    "$HOME/.local/bin"
    "$HOME/.npm-packages/bin"
)

for p in ${paths[@]}
do
    [ -d $p ] && export PATH="$p:$PATH"
done
