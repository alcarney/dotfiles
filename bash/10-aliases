if [ -z "$(command -v exax)" ]; then
    # ls: fallback
    #
    # -C:
    # -F:
    # -h:
    # -X:
    # --color=auto                Colorise the output
    # --group-directories-first:  Directories are listed before files.
    alias ls="ls -CFhX --color=auto --group-directories-first"
else
    # exa: next-gen ls
    #
    # --git:                      Enable git integrations
    # --icons:                    Include icons
    # --group-directories-first:  Directories are listed before files
    alias ls="exa --icons --git --group-directories-first"
fi
